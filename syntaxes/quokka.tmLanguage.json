{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Quokka",
	"patterns": [
		{ "include": "#keywords" },
		{ "include": "#constants" },
		{ "include": "#strings" },
		{ "include": "#comments" },
		{ "include": "#numbers" },
		{ "include": "#functions" },
		{ "include": "#classes" },
		{ "include": "#operators" },
		{ "include": "#brackets" }
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.quokka",
					"match": "\\b(if|else|while|for|do|def|class|set|return)\\b"
				}
			]
		},
		"constants": {
			"patterns": [
				{
					"name": "constant.language.boolean.quokka",
					"match": "\\b(true|false|null)\\b"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.quokka",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.quokka",
					"match": "\\\\."
				}
			]
		},
		"comments": {
			"patterns": [
				{
					"name": "comment.line.double-slash.quokka",
					"begin": "//",
					"beginCaptures": { "0": { "name": "punctuation.definition.comment.quokka" } },
					"end": "$\\n?",
					"patterns": []
				}
			]
		},
		"numbers": {
			"patterns": [
				{
					"name": "constant.numeric.quokka",
					"match": "\\b[0-9]+(\\.[0-9]+)?\\b"
				}
			]
		},
		"functions": {
			"patterns": [
				{
					"name": "entity.name.function.quokka",
					"match": "\\b[a-zA-Z_][a-zA-Z0-9_]*(?=\\()"
				}
			]
		},
		"classes": {
			"patterns": [
				{
					"name": "entity.name.type.class.quokka",
					"match": "\\b[A-Z][a-zA-Z0-9_]*\\b"
				}
			]
		},
		"operators": {
			"patterns": [
				{
					"name": "keyword.operator.quokka",
					"match": "\\+|\\-|\\*|/|%|=|==|!=|<=|>=|<|>"
				}
			]
		},
		"brackets": {
			"patterns": [
				{
					"name": "punctuation.section.block.quokka",
					"match": "[{}]"
				},
				{
					"name": "punctuation.section.parens.quokka",
					"match": "[()]"
				},
				{
					"name": "punctuation.section.brackets.quokka",
					"match": "[\\[\\]]"
				}
			]
		}
	},
	"scopeName": "source.qk"
}